{% extends 'base.html.twig' %}
{% block customcss %}
    {{ parent() }}
    <style>
        h3 {
            font-size: 18px;
            margin: 10px;
            letter-spacing: 0.1em;
        }
    </style>
{% endblock %}
{% block contenido %}
    <div id="band" class="row">

        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-md-offset-3">
            <h1>Solicitar Servicio</h1>
            <h3 >Selecciona el día de la semana y un rango horario para buscar el servicio que más se adapte a tu horario!</h3>
            <div class="panel panel-default">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <br>
                <button type="submit" class="btn btn-primary center-block boton"><i class="glyphicon glyphicon-search"></i></button>
                    <br>
                    {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock %}