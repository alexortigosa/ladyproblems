{% extends 'base.html.twig' %}
{% block customcss %}
    {{ parent() }}
    <style>
    /*CSSS DE VISTA USUARIO*/
    body {
    padding-left: 20px;
    padding-right: 20px;
    }
    .imagen {


    width: 40%;
    height: 40%;
    }
    .centro {

    text-align: center;
    }

    .panel {
    padding: 20px;
    }

    h3 {
    font-size: 18px;
    margin: 10px;
        letter-spacing: 0.1em;
    }

    h1 {
    margin: 20px;
    }
    .color-td {
    background: #fff59d;
    }

    .color-mensaje {
    background: #00c853;
