{% extends 'base.html.twig' %}
{% block title %} Alex Ortigosa Web - Sorteos {% endblock %}
{% block customcss %}
    {{ parent() }}
{% endblock %}
{% block contenido %}

    <div class="row">
        <div class="box">
            <div class="col-lg-12">

                <h1>Peticiones</h1>
                <div class="col-m">
                    {% if peticiones is defined %}
                        {% if peticiones|length > 0 %}
                            {% for peticion in peticiones %}
                                <div class="col-md-6 col-lg-6">
                                    <h2>Peticion <span class="small" style="color:black;">{{ peticion.fechaInicio|date('Y-m-d') }}</span> </h2>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div><h1>No hay peticiones</h1></div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>



{% endblock %}
{% block customjs %}
    {{ parent() }}
    <script>

    </script>
{% endblock %}
{% block jsready %}
    selectedMenuSer("buttonSorteo");
{% endblock %}