{% extends 'base.html.twig' %}
{% block title %} Alex Ortigosa Web - Sistemas E-commerce {% endblock %}
{% block customcss %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/ecom.css') }}"/>
{% endblock %}
{% block contenido %}
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h1>My QR</h1>

            <img src="{{ qrcode_data_uri(urlvalidation, { size: 200, padding: 10, label:  urlvalidation}) }}" class="center-block" />
        </div>
    </div>


{% endblock %}
{% block customjs %}
    {{ parent() }}
    <script>
        function goToGraph(){
            $('#myTabs li:eq(1) a').tab('show');
        }
        function euqalHeightintabs(){
            var maxHeight=0;
            $("#myTabs .tab-pane").each(function () {
                var tabHeight=$(this).height();
                if(tabHeight>maxHeight)
                    maxHeight=tabHeight;
            });
            $("#myTabs .tab-pane").each(function () {
                $(this).height(maxHeight);
            });

        }
    </script>
{% endblock %}
{% block jsready %}
    euqalHeightintabs();
    selectedMenuSer("buttonservice");
{% endblock %}